<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/courceinsertTV0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/courceinsertTV4"
            android:text="插入讲解信息"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/courceinsertTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/courceinsertET1"
            android:layout_alignBottom="@+id/courceinsertET1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            android:text="ID    号:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/courceinsertTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertET1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="22dp"
            android:text="参观时间:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/courceinsertET5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertET4"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/courceinsertTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/courceinsertET4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertET3"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp"
            android:layout_toRightOf="@+id/courceinsertTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/courceinsertET3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertET2"
            android:layout_alignLeft="@+id/courceinsertET2"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/courceinsertET2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertET1"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/courceinsertTV4"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true" />

        <EditText
            android:id="@+id/courceinsertET1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertTV0"
            android:layout_alignLeft="@+id/courceinsertTV0"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine|none"
            android:singleLine="true">

            <requestFocus />

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/courceinsertTV5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/courceinsertET5"
            android:layout_alignBottom="@+id/courceinsertET5"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="12dp"
            android:text="参观班级:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/courceinsertTV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courceinsertTV2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="91dp"
            android:text="参观人数:"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/courceinsertTV3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/courceinsertET3"
            android:layout_alignTop="@+id/courceinsertET3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:text="参观学院："
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/stuinsertbtn"
            android:layout_width="78dp"
            android:layout_height="31dp"
            android:layout_below="@+id/courceinsertET5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/title_bg"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="meetInsertLoad"
            android:text="提交"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

</ScrollView>